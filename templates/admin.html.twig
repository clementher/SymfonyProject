{% extends 'base.html.twig' %}

{% block title %}Gestion de planning{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    {% endblock %}

{% form_theme formUser 'bootstrap_4_layout.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div id="containerAdmin">
        <div id="formAdmin">
            <div class="containerAdmin">
                <h2>Ajouter une Matière</h2>
                {{ form_start(formUser) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(formUser) }}
                </div>
                {{ form_row(formUser.nom) }}
                {{ form_row(formUser.prenom) }}
                {{ form_row(formUser.email) }}
                {{ form_row(formUser.password) }}
                {{ form_row(formUser.specialiteprofessionnelle) }}
                <button type="submit" class="btn btn-success" onclick="return confirm('Vous êtes sur ?')">Créer</button>
                {{ form_end(formUser) }}
            </div>

            <br>
            <h2>Liste des Matières</h2>
            {% for user in users %}
                <div class="containerAdmin">
                    <div>Nom: <b>{{ user.nom }}</b></div>
                    <div>Prénom: <b>{{ user.prenom }}</b></div>
                    <div>Email: <b>{{ user.email }}</b></div>
                    <div>Spécialité: <b>{{ user.specialiteprofessionnelle }}</b></div>
                    <div class="deleteAdmin"><a href="/delete/{{ user.id }}" style="text-align: right;width: 100%;">
                            <i class="material-icons deleteIcon" onclick="return confirm('Vous êtes sur ?')">
                                delete_forever
                            </i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div id="formAdmin">
            <div class="containerAdmin">
                <h2>Ajouter un Intervenant</h2>
                {{ form_start(formUser) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(formUser) }}
                </div>
                {{ form_row(formUser.nom) }}
                {{ form_row(formUser.prenom) }}
                {{ form_row(formUser.email) }}
                {{ form_row(formUser.password) }}
                {{ form_row(formUser.specialiteprofessionnelle) }}
                <button type="submit" class="btn btn-success" onclick="return confirm('Vous êtes sur ?')">Créer</button>
                {{ form_end(formUser) }}
            </div>

            <br>
            <h2>Liste des Intervenants</h2>
            {% for user in users %}
                <div class="containerAdmin">
                    <div>Nom: <b>{{ user.nom }}</b></div>
                    <div>Prénom: <b>{{ user.prenom }}</b></div>
                    <div>Email: <b>{{ user.email }}</b></div>
                    <div>Spécialité: <b>{{ user.specialiteprofessionnelle }}</b></div>
                    <div class="deleteAdmin"><a href="/delete/{{ user.id }}" style="text-align: right;width: 100%;">
                            <i class="material-icons deleteIcon" onclick="return confirm('Vous êtes sur ?')">
                                delete_forever
                            </i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div id="formAdmin">
            <div class="containerAdmin">
                <h2>Ajouter un Cours</h2>
                {{ form_start(formUser) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(formUser) }}
                </div>
                {{ form_row(formUser.nom) }}
                {{ form_row(formUser.prenom) }}
                {{ form_row(formUser.email) }}
                {{ form_row(formUser.password) }}
                {{ form_row(formUser.specialiteprofessionnelle) }}
                <button type="submit" class="btn btn-success" onclick="return confirm('Vous êtes sur ?')">Créer</button>
                {{ form_end(formUser) }}
            </div>

            <br>
            <h2>Liste des Cours</h2>
            {% for user in users %}
                <div class="containerAdmin">
                    <div>Nom: <b>{{ user.nom }}</b></div>
                    <div>Prénom: <b>{{ user.prenom }}</b></div>
                    <div>Email: <b>{{ user.email }}</b></div>
                    <div>Spécialité: <b>{{ user.specialiteprofessionnelle }}</b></div>
                    <div class="deleteAdmin"><a href="/delete/{{ user.id }}" style="text-align: right;width: 100%;">
                            <i class="material-icons deleteIcon" onclick="return confirm('Vous êtes sur ?')">
                                delete_forever
                            </i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>



    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"
                integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
