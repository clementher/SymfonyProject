{% extends 'base.html.twig' %}

{% block title %}Planning Mois{% endblock %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        html {
            font-family: sans-serif;
        }
        table {
            border-collapse: collapse;
            letter-spacing: 1px;
            font-size: 0.8rem;
            background: white;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
        }
        td, th {
            padding: 10px 20px;
        }
        td {
            text-align: center;
        }
        caption {
            padding: 10px;
        }

    </style>

    <div id="corps">
        <div id="containerNavCalendar">

            <button class="buttonNav arrowNav" onclick="document.location.href='/month/';">
                <i class="material-icons">
                    undo
                </i>
                <div>
                    &nbsp;Précédent
                </div>
            </button>
            <div id="choice">
                <nav class="nav nav-pills nav-fill">
                    <a class="nav-item nav-link" onclick="document.location.href='/week/'">Semaine</a>
                    <a class="nav-item nav-link" onclick="document.location.href='/month/'">Mois</a>
                    <a class="nav-item nav-link active" onclick="document.location.href='/year/'">Année</a>
                </nav>
            </div>

            <button class="buttonNav arrowNav" onclick="document.location.href='/month/';">
                <div>
                    Suivant &nbsp;
                </div>
                <i class="material-icons">
                    redo
                </i>
            </button>
        </div>


        <table class="table">
