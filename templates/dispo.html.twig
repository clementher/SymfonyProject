        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
    {% endblock %}


{% block body %}


<div id="containerAdmin">
    <div class="formAdmin">
        <h2 class="titleAdmin">Ajouter une plage de disponibilité</h2>
        <div class="addDispo">
            <div class="chooseDispo">
            Du
            <div class="begin">
                <div class="form-group">
                    <select class="form-control"name="Jours" id="pet-select">
                        {% for i in 1..31 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="pet-select">
                        {% for i in 1..12 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="pet-select">
                        {% for i in 2019..2022 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            au
            <div class="end">
                <div class="form-group">
                    <select class="form-control"name="Jours" id="pet-select">
                        {% for i in 1..31 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="pet-select">
                        {% for i in 1..12 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="pet-select">
                        {% for i in 2019..2022 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            </div>
            <div class="ajouter">
                <div>Ajouter&nbsp;</div>
                <i class="ajouterIcon material-icons">
                    add_circle_outline
                </i>
            </div>
        </div>
        <h2 class="titleAdmin">Liste de mes disponibilités</h2>
        <div class="listDispo">
            <div style="margin-left: 5px">
                Du 01/03/2020 au 05/03/2020
            </div>
            <div class="delete">
                <div>Supprimer&nbsp;</div>
                <i class="material-icons deleteIcon">
                    delete_forever
                </i>
            </div>
        </div>

        <div class="listDispo">
            <div style="margin-left: 5px">
                Du 20/03/2020 au 24/03/2020
            </div>
            <div class="delete">
                <div>Supprimer&nbsp;</div>
                <i class="material-icons deleteIcon">
                    delete_forever
                </i>
            </div>
        </div>

        <div class="listDispo">
            <div style="margin-left: 5px">
                Du 11/05/2020 au 15/05/2020
            </div>
            <div class="delete">
                <div>Supprimer&nbsp;</div>
                <i class="material-icons deleteIcon">
                    delete_forever
                </i>
            </div>
        </div>
    </div>
</div>


