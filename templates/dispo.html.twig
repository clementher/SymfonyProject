{% extends 'base.html.twig' %}
{% block title %}Saisie des disponibilités{% endblock %}


    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
              integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb"
              crossorigin="anonymous">
        <link rel="stylesheet" href="/css/font-awesome.css">
        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
    {% endblock %}


{% block body %}


<div id="containerAdmin">
    <div class="formAdmin">
        <h2 class="titleAdmin">Ajouter une plage de disponibilité</h2>
        <div class="addDispo">
            <div class="chooseDispo">
            Du
            <div class="begin">
                <div class="form-group">
                    <select class="form-control"name="Jours" id="jour1">
                        {% for i in 1..31 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="mois1">
                        {% for i in 1..12 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="annee1">
                        {% for i in 2019..2050 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            au
            <div class="end">
                <div class="form-group">
                    <select class="form-control"name="Jours" id="jour2">
                        {% for i in 1..31 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="mois2">
                        {% for i in 1..12 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                &nbsp;/&nbsp;
                <div class="form-group">
                    <select class="form-control"name="Jours" id="annee2">
                        {% for i in 2019..2050 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            </div>
            <div class="ajouter" onclick="document.location.href='/addDispo/'+document.getElementById('jour1').value+';'+
                                                                              document.getElementById('mois1').value+';'+
                                                                              document.getElementById('annee1').value+';'+
                                                                              document.getElementById('jour2').value+';'+
                                                                              document.getElementById('mois2').value+';'+
                                                                              document.getElementById('annee2').value">
                <div>Ajouter&nbsp;</div>
                <i class="ajouterIcon material-icons" >
                    add_circle_outline
                </i>
            </div>
        </div>
        <h2 class="titleAdmin">Liste de mes disponibilités</h2>
        {% if nb > 0 %}
        {% for i in 0..nb-1 %}
        <div class="listDispo">
            <div style="margin-left: 5px">
                Du {{dates[2*i]}} au {{dates[2*i+1]}}
            </div>
            <div class="delete" onclick="document.location.href='/delDispo/{{dates[2*i]|replace({'/':';'})}};{{dates[2*i+1]|replace({'/':';'})}}'">
                <div>Supprimer&nbsp;</div>
                <i class="material-icons deleteIcon">
                    delete_forever
                </i>
            </div>
        </div>
        {% endfor %}
        {% endif %}
    </div>
</div>


